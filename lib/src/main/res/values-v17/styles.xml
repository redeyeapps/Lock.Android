<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Lock.Theme.Text.ListItem">
        <item name="android:layout_marginLeft">
            @dimen/com_auth0_lock_widget_horizontal_margin_small
        </item>
        <item name="android:layout_marginStart">
            @dimen/com_auth0_lock_widget_horizontal_margin_small
        </item>
        <item name="android:layout_height">@dimen/com_auth0_lock_list_item_height</item>
        <item name="android:textSize">@dimen/com_auth0_lock_list_item_text</item>
    </style>

    <style name="Lock.Theme.Text.ErrorLink" parent="Lock.Theme.Text.Link">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/com_auth0_lock_error_link</item>
        <item name="android:textSize">@dimen/com_auth0_lock_subtitle_error_text</item>
        <item name="android:layout_marginLeft">@dimen/com_auth0_lock_widget_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
        <item name="android:layout_marginStart">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
        <item name="android:layout_marginEnd">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
    </style>

    <style name="Lock.Theme.Text.Subtitle.ResetPassword" parent="Lock.Theme.Text.Title">
        <item name="android:textSize">@dimen/com_auth0_lock_title_text</item>
        <item name="android:lineSpacingExtra">@dimen/com_auth0_lock_subtitle_text_spacing</item>
        <item name="android:layout_marginLeft">@dimen/com_auth0_lock_widget_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
        <item name="android:layout_marginStart">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
        <item name="android:layout_marginEnd">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
    </style>

    <style name="Lock.Theme.Text.Title.Error">
        <item name="android:textSize">@dimen/com_auth0_lock_title_error_text</item>
        <item name="android:textColor">@color/com_auth0_lock_passwordless_link_sent_text</item>
        <item name="android:layout_marginLeft">@dimen/com_auth0_lock_widget_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
        <item name="android:layout_marginStart">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
        <item name="android:layout_marginEnd">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
    </style>

    <style name="Lock.Theme.Text.Subtitle.Error" parent="Lock.Theme.Text.Title">
        <item name="android:lineSpacingExtra">@dimen/com_auth0_lock_subtitle_text_spacing</item>
        <item name="android:layout_marginBottom">
            @dimen/com_auth0_lock_widget_vertical_margin_passwordless
        </item>
        <item name="android:textSize">@dimen/com_auth0_lock_subtitle_error_text</item>
        <item name="android:layout_marginLeft">@dimen/com_auth0_lock_widget_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
        <item name="android:layout_marginStart">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
        <item name="android:layout_marginEnd">@dimen/com_auth0_lock_widget_horizontal_margin
        </item>
    </style>

    <style name="Lock.Theme.Text.SocialButton">
        <item name="android:gravity">center|start</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:paddingRight">
            @dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:paddingStart">@dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:paddingEnd">
            @dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/com_auth0_lock_social_button_text</item>
        <item name="android:textColor">@color/com_auth0_lock_social_text</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Lock.Theme.Widget.Icon.PasswordVisibilityToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/com_auth0_lock_input_field_stroke_width</item>
        <item name="android:tint">@color/com_auth0_lock_hint_text</item>
        <item name="android:src">@drawable/com_auth0_lock_ic_password_hidden</item>
        <item name="android:layout_marginRight">@dimen/com_auth0_lock_widget_horizontal_margin_small
        </item>
        <item name="android:layout_marginEnd">@dimen/com_auth0_lock_widget_horizontal_margin_small
        </item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Lock.Theme.Widget.Field" parent="Lock.Theme.Text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/com_auth0_lock_hint_text</item>
        <item name="android:layout_height">@dimen/com_auth0_lock_widget_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/com_auth0_lock_text</item>
        <item name="android:paddingLeft">@dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:paddingRight">
            @dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:paddingStart">@dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:paddingEnd">
            @dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:layout_marginRight">@dimen/com_auth0_lock_input_field_stroke_width
        </item>
        <item name="android:layout_marginEnd">@dimen/com_auth0_lock_input_field_stroke_width</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/com_auth0_lock_field_text</item>
    </style>

    <style name="Lock.Theme.Widget.CountryCodeSelector" parent="Lock.Theme.Widget.Field">
        <item name="android:background">@color/com_auth0_lock_input_country_code_background</item>
        <item name="android:textColor">@color/com_auth0_lock_hint_text</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="Lock.Theme.Widget.CountryCodeSelector.CountryName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:paddingStart">@dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
    </style>

    <style name="Lock.Theme.Widget.CountryCodeSelector.CountryCode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:paddingLeft">
            @dimen/com_auth0_lock_widget_small_margin
        </item>
        <item name="android:paddingRight">
            @dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
        <item name="android:paddingStart">
            @dimen/com_auth0_lock_widget_small_margin
        </item>
        <item name="android:paddingEnd">
            @dimen/com_auth0_lock_widget_with_text_horizontal_padding
        </item>
    </style>

    <style name="Lock.Theme.Text.SubmitButton">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">@dimen/com_auth0_lock_widget_small_margin
        </item>
        <item name="android:paddingEnd">@dimen/com_auth0_lock_widget_small_margin
        </item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/com_auth0_lock_labeled_submit_button_text</item>
        <item name="android:textColor">@color/com_auth0_lock_social_text</item>
    </style>

    <style name="Lock.Theme.Text.PasswordPolicy">
        <item name="android:textSize">@dimen/com_auth0_lock_field_error_text</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Lock.Theme.Text.ValidationError">
        <item name="android:textColor">@color/com_auth0_lock_validation_error_text</item>
        <item name="android:textSize">@dimen/com_auth0_lock_field_error_text</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Lock.Theme.Text.SSO">
        <item name="android:layout_marginLeft">
            @dimen/com_auth0_lock_widget_horizontal_margin_small
        </item>
        <item name="android:layout_marginStart">
            @dimen/com_auth0_lock_widget_horizontal_margin_small
        </item>
        <item name="android:textColor">@color/com_auth0_lock_sso_text</item>
        <item name="android:textSize">@dimen/com_auth0_lock_sso_text</item>
    </style>

</resources>